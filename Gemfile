source "https://rubygems.org"

# Dotenv will use the .env file for configuration. You can flexibly change your configuration in AWS, Azure...
# https://www.rubydoc.info/gems/dotenv-rails/2.1.1
gem 'dotenv'

# Faraday is an HTTP client library abstraction layer that provides a common interface over many adapters
# such as Net::HTTP, Typhoeus, Patron, Excon, HTTPClient, and more
# https://github.com/lostisland/faraday
gem 'faraday'

# Ruby Testing Framework
gem 'rspec'

# SDK documentation
gem 'yard'